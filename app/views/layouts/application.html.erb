<!DOCTYPE html>
<html>
  <head>
    <title>MigraineTracker</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

<br>
  </head>

  <body class='home-page'>

<nav class="navbar navbar-toggleable-md navbar-light bg-faded">
  <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
   <span class="navbar-toggler-icon"></span>
 </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Home", home_index_path, class: 'nav-link' %>
      </li>
    <% if user_signed_in? %>
      <li class="nav-item active">
        <%= link_to "Record a Meal", new_food_path, class: 'nav-link' %>
      </li>
      <li class="nav-item active">
        <%= link_to "Record a Migraine", new_migraine_path, class: 'nav-link' %>
      </li>
      <li class="nav-item active">
        <%= link_to "View Migraine History", migraines_path, class: 'nav-link' %>
      </li>
    <% end %>

      <li class="nav-item active">
        <%= link_to "About", home_about_path, class: 'nav-link' %>
      </li>
      <li class="nav-item active">
        <%= link_to "Resources", home_resources_path, class: 'nav-link' %>
      </li>
    </ul>

      <% if user_signed_in? %>
        <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: 'nav-link' %>
      <% else %>
        <%= link_to "Sign in", new_user_session_path, class: 'nav-link' %>
        <%= link_to "Sign up", new_user_registration_path, class: 'nav-link' %>
        <%= link_to "Forgot your password?", new_user_password_path, class: 'nav-link' %>
      <% end %>
    </div>
  </nav>
      <%= yield %>
  </body>
</html>
